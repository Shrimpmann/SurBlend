# SurBlend Environment Configuration Example
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=surblend
DB_USER=surblend
DB_PASSWORD=your_secure_password_here

# Or use full connection string
DATABASE_URL=postgresql://surblend:your_secure_password_here@localhost:5432/surblend

# Security
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=ChangeThisStrongPassword123!

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
HOST_IP=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=false
DB_ECHO=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=/opt/surblend/uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourcompany.com

# Backup Configuration
BACKUP_PATH=/opt/surblend/backups
BACKUP_RETENTION_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds

# Optional Features
ENABLE_REGISTRATION=false
ENABLE_2FA=false
ENABLE_API_DOCS=true

# Company Defaults (can be overridden in system settings)
DEFAULT_COMPANY_NAME=Your Company Name
DEFAULT_MARGIN_PERCENT=20
DEFAULT_QUOTE_VALIDITY_DAYS=30
